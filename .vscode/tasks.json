{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "cmake_build_default",
            "command": "build",
            "type": "cmake",
            "problemMatcher": "$gcc"
        },
        {
            "label": "bootloader",
            "command": "picotool",
            "args": [
                "reboot",
                "-f",
                "-u"
            ],
            "type": "shell",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "_short_wait",
            "command": "sleep",
            "args": [
                "1"
            ],
            "type": "shell"
        },
        {
            "label": "upload",
            "command": "picotool",
            "args": [
                "load",
                "./build/starscope_pico.uf2"
            ],
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "cmake_build_default",
                "bootloader",
                "_short_wait"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "upload_and_run",
            "command": "picotool",
            "args": [
                "reboot"
            ],
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "upload"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "upload_and_monitor",
            "command": "picocom",
            "args": [
                "-b",
                "115200",
                "/dev/serial/by-id/usb-Raspberry_Pi_Pico_E660D4A0A7252532-if00"
            ],
            "type": "shell",
            "dependsOrder": "sequence",
            "dependsOn": [
                "upload_and_run",
                "_short_wait"
            ],
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
